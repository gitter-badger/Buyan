
<div class="container">
    <div>
        
  <div class="ui right labeled left icon input">
  <i class="tags icon"></i>
  {{input class="networkName" placeholder="network name  " value=networkName}}
  <div class="ui tag label">
    network name
  </div>
</div>
      
    </div>
  <style>
    .networkView {
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      position: absolute;
      z-index:-5;
    }
  </style>
  <!-- network controll -->
  
  <div class="ui fluid search selection dropdown search-select">
      <input name="country" {{bind-attr value=myId}} type="hidden">
      <i class="dropdown icon"></i>
      <div class="default text">Select Your Handle</div>
      <div class="menu">
          {{#each id in ids}}
            <div class="item" {{bind-attr data-value=id.id}}>{{id.name}} {{id.desc}}</div>
          {{/each}}
        <div class="ui input">
        {{input placeholder="new..." class="ui input search_box myId" value=newId insert-newline='makenewid' }}
        </div>
        
      </div>
  </div>
  <button class="ui button enterbuyan" {{action "setMyIdForThisNetwork" myId}}>enter network</button>

  <button class="ui button pullpeersfromserver" {{ action 'getpeers'}}>
      pull peers from server
  </button>
  <button class="ui button getsomepeer" {{ action 'getsetpeers'}}>
      tell server I want some peers
  </button>
  <button class="ui button getmeonemorepeer" {{ action 'getmeonemorepeer'}}>
      get me one more peer
  </button>
  <!-- network controll -->
    
  <div {{bind-attr id=networkId}} class="networkView"></div>
</div>


{{yield}}
