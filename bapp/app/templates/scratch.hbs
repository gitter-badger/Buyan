

 


<div class="one wide column" {{action "networkToggle" on="click"}}>
	network

</div>


{{#if networkOn}}
<div class="six wide column ">
	{{#view "connector"}}



	{{/view}}
	<div class="ui list"> 
		{{#each network in model.networks}}
		    <div class="item" {{action "toggleNetwork" network}}>
		        <div class="content">

		   		   	<div class="header">{{network.name}}</div>
		        	
			       
					{{#each peer in network.peers}}
				    <div {{action "edit" person}}>
				    <div class="list">
				        <div class="item">
					        <i class="right triangle icon"></i>
				        	<div class="content">
				            	<a class="header">{{peer.name}}</a>
				            	<div class="description">{{peer.desc}}</div>
				          	</div>
				        </div>
					</div>     
				        
				    </div>
					{{/each}}
				</div>
	   		</div>
		{{/each}}
	</div>
</div>
{{/if}}

{{buyan-graph  peerl=model.peers ids=model.ids getpeers="getpeers" newid="newid" class="six wide column"}}
