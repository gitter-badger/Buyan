
	

{{#view "sidemenu"}}
<div class="ui wide left vertical inverted labeled icon sidebar menu">
	<a class="item">
		<i class="home icon"></i>
		Home
	</a>
	<div class="item">
		<div class="ui  fluid accordion">
			<div class="ui active title">
				<i class="dropdown icon"></i>
				Networks
			</div>
			<div class="active content ">
				<div class="ui small   header">
					
					
					<div class="mini ui action left icon input ">
						<input type="text" placeholder="Search...">
					</div>
				</div>
				<div class="menu ">
					{{#each network in model.networks}}
					<div class="item" {{action "selectNetwork" network}}>
						<div class="content ui right icon">
							{{network.name}}
							<i class="right remove icon"
							{{action "deleteNetwork" network.id}}
							></i> 
							

						</div>
					</div>
					{{/each}}
					<div class="item" {{action "selectNetwork" network}}>
						<div class="content">
							<div class="mini ui action right icon input ">
								
					          {{input placeholder="new network" type="text" value=newN }}
							<i class="right add icon" {{action "newNetwork" newN}}>
								

							</i> </div>

						</div>
					</div>
					
					
					
				</div>
			</div>
		</div>
	</div>
	<div class="item">
		<div class="ui  fluid accordion">
			<div class="ui active title">
				<i class="dropdown icon"></i>
				Peers
			</div>
			<div class=" content">
				<div class="ui small  inverted header">
					
					
					<div class="mini ui action left icon input ">
						<input type="text" placeholder="Search...">
					</div>
				</div>
				<div class="menu">
					{{#each peer in serverPeers}}
					<div {{action "edit" person}}>
						<div class="list">
							<div class="item serverPeers">
								<i class="right triangle icon"></i>
								<div class="content">
									<a class="header">{{peer.name}}</a>
									<div class="description">{{peer.desc}}</div>
								</div>
							</div>
						</div>
						
					</div>
					{{/each}}
					
					
					
				</div>
			</div>
		</div>
	</div>
	<a class="item">
		<i class="smile icon"></i>
		Friends
	</a>
	<a class="item">
		<i class="calendar icon"></i>
		History
	</a>
	<a class="item">
		<i class="mail icon"></i>
		Messages
	</a>
	<a class="item">
		<i class="chat icon"></i>
		Discussions
	</a>
	<a class="item">
		<i class="trophy icon"></i>
		Achievements
	</a>
	<a class="item">
		<i class="shop icon"></i>
		Store
	</a>
	<a class="item">
		<i class="settings icon"></i>
		Settings
	</a>
</div>
{{/view}}

<div class="ui grid padded ">
	<div class="row ">
	{{#link-to 'scratch'}} scratch {{/link-to}}
	</div>
	<div class="row ui grid padded">
				

<div class="one wide column " {{action "menuToggle" on="click"}}>
	<div> {{material-design-icon name='menu'}} menu</div>
	

	{{#each peer in serverPeers}}
	<div {{action "edit" person}}>
		<div class="list">
			<div class="item serverPeers">
				<i class="right triangle icon"></i>
				<div class="content">
					<a class="header">{{peer.name}}</a>
					<div class="description">{{peer.desc}}</div>
				</div>
			</div>
		</div>
		
	</div>
	{{/each}}
</div>
{{#if networkOn}}
<div class="six wide column ">
	{{#view "connector"}}
	{{/view}}
	<div class="ui list">
		{{#each network in model.networks}}
		<div class="item" {{action "selectNetwork" network}}>
			<div class="content">
				<div class="header">{{network.name}}</div>
				
				
				{{#each peer in network.peers}}
				<div {{action "edit" person}}>
					<div class="list">
						<div class="item">
							<i class="right triangle icon" ></i>
							<div class="content">
								<a class="header">{{peer.name}}</a>
								<div class="description">{{peer.desc}}</div>
							</div>
						</div>
					</div>
					
				</div>
				{{/each}}
			</div>
		</div>
		{{/each}}
	</div>
</div>
{{/if}}
{{#if networkSelected}}
{{buyan-graph  network=networkSelected peerl=model.peers ids=model.ids getpeersc="getpeersc" newid="newid" class="six wide column"}}
<div id="networkView"  style="
	width: 100%;
	height: 100%;
position: fixed;"></div>
{{/if}}
</div>
</div>